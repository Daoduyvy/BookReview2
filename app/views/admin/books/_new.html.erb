               <!-- Add Modal HTML -->
                <div id="addBookModal" class="modal fade">
                  <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title">Add New Book</h4>
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                          <%= simple_form_for [:admin,@book] , remote: true ,method: :post ,:html => { :multipart => true } do |f| %>
                            <%= select_tag(:category_id, options_for_select(@categories), include_blank: "Select a category", class: "form-control") %></br>
                            <%= f.file_field :book_img %>
                            <%= f.input :title %>
                            <%= f.input :publish_date ,as: :date %>
                            <%= f.input :author %>
                            <%= f.input :description,as: :text %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <%= f.button :submit %>
                          </div>
                        <% end %>
                    </div>
                  </div>
                </div>