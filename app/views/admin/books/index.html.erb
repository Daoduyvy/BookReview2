<div class="container-fluid main-container">
  <div class="col-md-10 content">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-3">
            <h2>Manage <b>Book</b></h2>
          </div>
          <div class="col-sm-7" style= "padding-top:1%">
            <%= form_tag(admin_books_path, method: :get) do  %>
              <div class="col-md-6" id="adv-search">
                <%= text_field_tag :term, params[:term], class: "form-control", placeholder: "Search by title",autocomplate: 'off' %>
              </div>
              <div class="col-md-4">
                <div class="button-group" style = "padding-left:10%">
                  <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"> Category</span> <span class="caret"></span></button>
                  <ul class="dropdown-menu">
                    <% @categories.each do |category| %>
                      <li > <%= check_box_tag 'category_id[]', category[1], false, :id => category[1] , autocomplate: 'off' %><span><%= label_tag category[0]%></span> </li>
                    <% end %>
                  </ul>
                </div>
              </div>
              <div class="col-md-2" style = "padding-left:3%">
                <%= submit_tag 'Search', class: "btn btn-primary"  %>
              </div>
            </div>
          <% end %>
          <div class="col-sm-2"style= "padding-top:1%">
            <a href="#addBookModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Book</span></a>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="table-wrapper">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>
                <span class="custom-checkbox">
                  <input type="checkbox" id="selectAll">
                  <label for="selectAll"></label>
                </span>
              </th>
              <th>Image</th>
              <th>Name</th>
              <th>Author</th>
              <th>Category</th>
              <th>Publish_date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book|  %>
              <tr>
                <td>
                  <span class="custom-checkbox">
                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                    <label for="checkbox1"></label>
                  </span>
                </td>
                <td>
                  <%= link_to admin_book_path(book) do %>
                   <%= image_tag book.book_img.url(:book_index),'data-action': "zoom"%> 
                  <% end %>
                  </td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.category.name %></td>
                <td><%= book.publish_date %></td>
                <td>
                  <a href="#editBookModal" class="edit"data-target="#editBookModal" data-toggle="modal" %><i class="material-icons" data-toggle="tooltip" value="<%= book.id %>" title="Edit">&#xE254;</i></a>
                  <a href="#deleteBookModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                </td>
              </tr>
              <tr>
                <td>
                </tr>
                <%= render 'admin/books/new' %>
                <%= render 'admin/books/edit' , book: book %>
                <%= render 'admin/books/delete' , book: book %>
              <% end %>
            </tbody>
          </table>
          <div class="clearfix">
            <div class="hint-text"> <%= page_entries_info @books %></div>
            <ul class="pagination">
              <div class="digg_pagination">
                <%= will_paginate @books, :container => false %>
              </div>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<footer class="pull-left footer">
  <p class="col-md-12">
    <hr class="divider">
    footer
  </p>
</footer>
</div>
