  <div class="table-wrapper" id="category-table">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>
                  <span class="custom-checkbox">
                    <input type="checkbox" id="selectAll">
                    <label for="selectAll"></label>
                  </span>
        </th>
        <th><%= I18n.t("admin.books.image") %></th>
        <th><%= I18n.t("admin.books.name") %></th>
        <th><%= I18n.t("admin.books.author") %></th>
        <th><%= I18n.t("admin.books.category") %></th>
        <th><%= I18n.t("admin.books.publish_date") %></th>
        <th><%= I18n.t("admin.books.action") %></th>
      </tr>
      </thead>
      <tbody id="books">
      <%= render 'admin/books/new' %>
      <% @books.each do |book| %>
        <tr id="book_<%= book.id %>">
          <td>
                    <span class="custom-checkbox">
                      <input type="checkbox" name="options[]" value="1">
                      <label for="checkbox1"></label>
                    </span>
          </td>
          <td>
            <%= image_tag book.book_img.url(:book_index), 'data-action': "zoom" %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.category.name %></td>
          <td><%= book.publish_date %></td>
          <td>
            <a href="#editBookModal_<%= book.id %>" class="edit" data-target="#editBookModal_<%= book.id %>" data-toggle="modal" %>
              <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
            </a>
            <a href="#deleteBookModal_<%= book.id %>" class="delete" data-toggle="modal">
              <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
            </a>
            <!-- Delete Modal HTML -->
            <div id="deleteBookModal_<%= book.id %>" class="modal fade">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Delete Book</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  </div>
                  <div class="modal-body">
                    <p>Are you sure you want to delete these Books?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                  </div>
                  <div class="modal-footer">
                    <%= link_to 'Destroy', [:admin, book], method: :delete, data: {confirm: 'Are you sure?'},
                                remote: true, class: 'admin_delete',
                                data: {toggle: "modal", dismiss: "modal", target: "#modal"} %>
                  </div>
                </div>
              </div>
            </div>
          </td>

        </tr>
        <!-- Edit Modal HTML -->
        <div id="editBookModal_<%= book.id %>" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Edit Book</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <%= simple_form_for [:admin, book], remote: true, method: :put, :html => {:multipart => true} do |f| %>
                  <%= select_tag(:category_id, options_for_select(@categories), include_blank: "Select a category", class: "form-control") %></br>
                  <%= image_tag book.book_img.url(:book_index), 'data-action': "zoom" %>
                  <%= f.file_field :book_img %>
                  <%= f.input :title %>
                  <%= f.input :publish_date, as: :string, label: false %>
                  <%= f.input :author %>
                  <%= f.input :description, as: :text %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= f.button :submit %>
                  </div>
                <% end %>
                </div>
          </div>
        </div>

      <% end %>
      </tbody>
    </table>
  </div>
  <div id="search-results">
  </div>
  <div class="clearfix">
    <div class="hint-text"> <%= page_entries_info @books %></div>
    <ul class="pagination">
      <div class="digg_pagination">
        <%= will_paginate @books, :container => false %>
      </div>
    </ul>
  </div>
