<div class="table-wrapper" id="category-table">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>
      <span class="custom-checkbox">
        <input type="checkbox" id="selectAll">
        <label for="selectAll"></label>
      </span>
      </th>
      <th><%= I18n.t('admin.categories.category') %> </th>
      <th><%= I18n.t('admin.categories.action') %> </th>
    </tr>
    </thead>
    <tbody id="categories">
    <div id="addCategoryModal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Add Category</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          </div>
          <div class="modal-body">
            <%= simple_form_for [:admin, @category], remote: true, method: :post,
                                :html => {:multipart => true} do |f| %>
              <%= f.input :name %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= f.button :submit %>
            <% end %>
            </div>
            </div>
      </div>
    </div>
    <% @categories.each do |category| %>
      <tr id="category<%= category.id %>">
        <td>
                  <span class="custom-checkbox">
                    <input type="checkbox" id="checkbox1" name="options[]" value="1">
                    <label for="checkbox1"></label>
                  </span>
        </td>
        <td><%= category.name %></td>
        <td>
          <a href="#editCategoryModal_<%= category.id %>" class="edit" data-toggle="modal" s>
            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
          </a>
          <a href="#deleteCategoryModal_<%= category.id %>" class="delete" data-toggle="modal">
            <i class="material-icons" data-toggle="tooltip" title="Delete" class="delete-category">&#xE872;</i>
          </a>
          <!-- Delete Modal HTML -->
          <div id="deleteCategoryModal_<%= category.id %>" class="modal fade">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title">Delete Book</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                  <p>Are you sure you want to delete these Books?</p>
                  <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                  <%= link_to 'Destroy', [:admin, category], method: :delete,
                              data: {toggle: "modal", dismiss: "modal", target: "#modal"},
                              remote: true, class: 'category_delete' %>
                </div>
              </div>
            </div>
          </div>
        </td>
      <tr>
        <!-- Edit Modal HTML -->
        <div id="editCategoryModal_<%= category.id %>" class="modal fade edit-modal-category">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Edit Category</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <%= simple_form_for [:admin, category], remote: true, method: :PATCH,
                                    :html => {:multipart => true} do |f| %>
                  <%= f.input :name, input_html: {value: f.object.name || category.name, id:  category.id},
                              as: :text %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= f.button :submit, class: "edit-category" %>
                  </div>
                <% end %>
                </div>
          </div>
        </div>
    <% end %>
    </tbody>
  </table>
</div>
<div class="clearfix">
  <div class="hint-text"> <%= page_entries_info @categories %></div>
  <ul class="pagination" id="ok">
    <div class="digg_pagination">
      <%= will_paginate @categories, :container => false, remote: true %>
    </div>
  </ul>
</div>