
<div>
<div class="col-md-2">
</div>
<div class="col-md-10">
<h1>Edit Review</h1>
<%= simple_form_for [@book, @review] do |f | %>
  <div id="admin-rating-form" data-score="<%= @review.rating %>" >
    <label> Rating </label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit , label:"Edit"%>
  <%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
<% end %>
</div>
</div>
<script>
  $('#admin-rating-form').raty({
      path: '/assets/',
      scoreName: 'review[rating]'
  });
  $('#admin-rating-form').raty('reload');
</script>
