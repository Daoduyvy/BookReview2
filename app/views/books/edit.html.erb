    <h1>Edit Book</h1>

    <%= simple_form_for @book,:html => { :multipart => true } do |f| %>
    <%= f.select :category_id, @categories %>
    <%= f.file_field :book_img %>
    <%= f.input :title %>
    <%= f.input :publish_date %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.button :submit %>
    <% end %>
    
